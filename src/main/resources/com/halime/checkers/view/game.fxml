    <!-- Turn label -->
    <Label fx:id="turnLabel" layoutX="20.0" layoutY="250.0" prefHeight="231.0" prefWidth="204.0" styleClass="turn-label" text="Turn: Red" wrapText="true">
      <font>
        <Font size="24.0" />
      </font>
    </Label>

    <!-- Game board -->
    <GridPane fx:id="boardGrid" layoutX="242.0" layoutY="63.0" prefHeight="644.0" prefWidth="892.0" styleClass="board-grid" AnchorPane.bottomAnchor="93.0" AnchorPane.leftAnchor="242.0" AnchorPane.rightAnchor="66.0" AnchorPane.topAnchor="63.0">
      <columnConstraints>
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
      </rowConstraints>
    </GridPane>
      <Button fx:id="playAgainButton" layoutX="30.0" layoutY="547.0" onAction="#handlePlayAgain" styleClass="restart-button" text="Play Again" visible="false" />

  </AnchorPane>
</VBox>
