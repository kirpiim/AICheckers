<VBox alignment="TOP_CENTER" spacing="10" stylesheets="@/com/halime/checkers/css/game.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.halime.checkers.controller.GameController">

  <MenuBar prefWidth="856.0" VBox.vgrow="NEVER">
    <menus>
      <Menu text="File">
        <items>
          <MenuItem text="New" />
          <MenuItem text="Openâ€¦" />
          <MenuItem text="Save" />
          <SeparatorMenuItem />
          <MenuItem text="Quit" />
        </items>
      </Menu>
      <Menu text="Edit">
        <items>
          <MenuItem text="Undo" />
          <MenuItem text="Redo" />
        </items>
      </Menu>
      <Menu text="Help">
        <items>
          <MenuItem text="About" />
        </items>
      </Menu>
    </menus>
  </MenuBar>

  <HBox alignment="CENTER" prefHeight="30.0" prefWidth="756.0" spacing="20" />

  <AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1200.0" VBox.vgrow="ALWAYS">
    <Rectangle arcHeight="5.0" arcWidth="5.0" height="660.0" layoutX="235.0" layoutY="57.0" stroke="BLACK" strokeType="INSIDE" width="905.0" />
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ffedec" height="82.0" layoutX="14.0" layoutY="250.0" stroke="BLACK" strokeType="INSIDE" width="163.0" />

    <!-- Turn label -->
    <Label fx:id="turnLabel" layoutX="44.0" layoutY="247.0" prefHeight="88.0" prefWidth="104.0" styleClass="turn-label" text="Turn: Red">
      <font>
        <Font size="24.0" />
      </font>
    </Label>

    <!-- Game board -->
    <GridPane fx:id="boardGrid" layoutX="242.0" layoutY="63.0" prefHeight="644.0" prefWidth="892.0" styleClass="board-grid" AnchorPane.bottomAnchor="93.0" AnchorPane.leftAnchor="242.0" AnchorPane.rightAnchor="66.0" AnchorPane.topAnchor="63.0">
      <columnConstraints>
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
        <ColumnConstraints percentWidth="12.5" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
      </rowConstraints>
    </GridPane>

    <!-- Restart button (always available) -->
    <Button fx:id="restartButton" layoutX="46.0" layoutY="400.0" styleClass="restart-button" text="Restart" />
      <Button fx:id="playAgainButton" layoutX="46.0" layoutY="547.0" onAction="#handlePlayAgain" styleClass="restart-button" text="Play Again" visible="false" />
      <Rectangle fx:id="winorlose" arcHeight="5.0" arcWidth="5.0" fill="#ffedec" height="82.0" layoutX="6.0" layoutY="450.0" stroke="BLACK" strokeType="INSIDE" width="163.0" />
      <Label fx:id="statusLabel" layoutX="16.0" layoutY="447.0" prefHeight="88.0" prefWidth="163.0" styleClass="turn-label" text="You WIN!">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

  </AnchorPane>
</VBox>
